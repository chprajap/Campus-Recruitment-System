<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Applying for job's name"
        android:textSize="30sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="student's name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="student's email Id" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="student's contact no." />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="student's grade" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="student's skill" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="student's address" />

</LinearLayout>
